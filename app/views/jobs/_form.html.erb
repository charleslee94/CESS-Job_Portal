<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :school %><br>
    <%= f.text_field :school, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :job_description %><br>
    <%= f.text_area :job_description, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :fte %><br>
    <%= f.text_field :fte, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :compensation_min %><br>
    <%= f.text_field :compensation_min, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :compensation_max %><br>
    <%= f.text_field :compensation_max, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :expiration %><br>
    <%= f.date_select :expiration, :default => 30.days.from_now, class: 'form-control' %>
    <% if @job.expiration != nil %>
      <% puts @job.expiration %>
      <% puts "!!!!!!!" %>
      <% puts Time.now %>
      <% if Time.now > @job.expiration %>
        <% puts "job has already passed" %>
      <% end %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
